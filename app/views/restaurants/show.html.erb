<div class="container">
  <%= link_to "<<", restaurants_path, class: "btn btn-outline-info my-2" %>
  <h3 class="text-center py-5 border"><%= @restaurant.name %></h3>
  <p><em><%= @restaurant.address %></em></p>
  <p><em><%= @restaurant.phone_number %></em></p>
  <h4>Category : <%= @restaurant.category %></h4>

  <% @reviews.each do |review| %>
    <div class="container d-flex justify-content-between align-items-center">
      <p><%= review.rating %>/5</p>

      <p"><em><%= review.content %></em></p>

    </div>
  <% end %>

  <br>
  <br>

  <h4>Review this restaurant</h4>
  <%= simple_form_for [@restaurant, @review] do |f|  %>
  <%= f.input :content %>
  <%= f.input :rating, collection: Review::RATING %>
  <%= f.submit %>
<% end %>
</div>
